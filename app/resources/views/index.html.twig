		    		<a class="waves-effect waves-light btn deep-orange darken-4 btn-large" style="width:100%" id="createSystem">{{'create-system'|trans}}</a>
		      		<ul class="collapsible" data-collapsible="accordion">
		        		<li>
		          			<div class="collapsible-header grey lighten-3 active">
		          				<i class="material-icons">filter_drama</i>{{'l-system'|trans}}
		          			</div>
		          			<div class="collapsible-body grey lighten-5">
			                	<form>
			                  		<div class="row">
			                    		<div class="input-field col s12">
			                      			<p class="range-field" style="padding: 0px;">
			                        			<input type="range" id="num-generations" min="0" max="15" value="12" />
			                      			</p>
				                    	</div>
				                  	</div>
				                  	<div class="row">
				                    	<div class="input-field col s12">
				                      		<input id="axiom" type="text" class="validate" value="F+X">
				                      		<label for="axiom">{{'axiom'|trans}}</label>
				                    	</div>
				                  	</div>
				                  	<div class="row">
				                    	<div class="rules-input">
				                      		<div class="rule-input">
				                        		<div class="input-field col s3">
				                          			<input type="text" class="validate key" value="F">
				                          			<label for="key">{{'key'|trans}}</label>
				                        		</div>
				                        		<div class="input-field col s9">
				                          			<input type="text" class="validate value" value="X++F+F+X">
				                          			<label for="value">{{'value'|trans}}</label>
				                        		</div>
				                      		</div>
				                    	</div>
				                    	<div class="input-field col s12">
				                      		<a class="waves-effect waves-light btn red" style="width:100%" id="add-new-rule">{{'addRule'|trans}}</a>
				                    	</div>
				                  	</div>
			                	</form>
		          			</div>
