			              	<div class="collapsible-header grey lighten-3">
			              		<i class="material-icons">place</i>{{'turtle'|trans}}
			              	</div>
			              	<div class="collapsible-body grey lighten-5">
			                	<form>
			                  		<div class="row bind-inputs">
			                    		<div class="input-field col s2">
			                      			<input id="bind-key" type="text" class="validate" value="F">
			                      			<label for="bind-key">{{'key'|trans}}</label>
			                    		</div>
			                    		<div class="input-field col s6">
			                        		<select id="do-it">
					                          	<option value="" disabled>---</option>
					                          	<option value="moveForward" selected>{{'moveForward'|trans}}</option>
					                          	<option value="moveRight">{{'moveRight'|trans}}</option>
					                          	<option value="moveLeft">{{'moveLeft'|trans}}</option>
			                        		</select>
			                    		</div>
			                    		<div class="input-field col s4">
			                      			<input id="param" type="text" class="validate" value="15">
			                      			<label for="param">{{'param'|trans}}</label>
			                    		</div>
			                  		</div>
			                  		<div class="row bind-inputs">
			                    		<div class="input-field col s2">
			                      			<input id="bind-key" type="text" class="validate" value="+">
			                      			<label for="bind-key">{{'key'|trans}}</label>
			                    		</div>
			                    		<div class="input-field col s6">
			                        		<select id="do-it">
			                          			<option value="" disabled>---</option>
			                          			<option value="moveForward" >{{'moveForward'|trans}}</option>
			                          			<option value="moveRight" selected>{{'moveRight'|trans}}</option>
			                          			<option value="moveLeft">{{'moveLeft'|trans}}</option>
			                        		</select>
			                    		</div>
			                    		<div class="input-field col s4">
			                      			<input id="param" type="text" class="validate" value="90">
			                      			<label for="param">{{'param'|trans}}</label>
			                    		</div>
			                  		</div>
			                 		<div class="row bind-inputs">
			                    		<div class="input-field col s2">
			                      			<input id="bind-key" type="text" class="validate" value="-">
			                      			<label for="bind-key">{{'key'|trans}}</label>
			                    		</div>
			                    		<div class="input-field col s6">
			                        		<select id="do-it">
			                          			<option value="" disabled>---</option>
			                          			<option value="moveForward" >{{'moveForward'|trans}}</option>
			                          			<option value="moveRight" >{{'moveRight'|trans}}</option>
			                          			<option value="moveLeft" selected>{{'moveLeft'|trans}}</option>
			                        		</select>
			                    		</div>
			                    		<div class="input-field col s4">
			                      			<input id="param" type="text" class="validate" value="90">
